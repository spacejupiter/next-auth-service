{
  "compilerOptions": {
    /* Basic Options */
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "node",
     "outDir": "dist",
    "lib": ["esnext", "dom"],
    "esModuleInterop": true,
    "sourceMap": false,

    /* Strict Type-Checking Options */
    "strict": true,
    "noImplicitAny": true,

    /* Module Resolution Options */
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },

    /* Experimental Options */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
